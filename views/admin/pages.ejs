<%- include ('../_layouts/adminheader') %>
<h2 class="page-title">Pages</h2>
<a href="/admin/add-pages" class="btn btn-primary">Add a new page</a>
<br /><br />

<table class="table table-striped">
  <thead>
    <tr class="home">
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% pages.forEach(function (page) { %>
    <tr id="id_<%= page._id %>" class="<%= page.slug %>">
      <td><%= page.title %></td>
      <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a></td>
      <% if (page.slug == "home") { %>
      <td></td>
      <% } else { %>
      <td><a href="/admin/pages/edit-page/<%= page._id %>">Delete</a></td>
      <% }; %>
    </tr>

    <% }) %>
  </tbody>
</table>

<script>
  $("tbody").sortable({
    group: "list",
    draggable: "tr:not('.home')",
    ghostClass: "ui-state-highlight",
    handle: "tr:not('.home')",
    onSort: function () {
      var ids = $("tbody").sortable("serialize");
      var url = "/admin/pages/reorder-pages";

      $.post(url, ids);
    },
  });
</script>

<%- include ('../_layouts/adminfooter') %>
